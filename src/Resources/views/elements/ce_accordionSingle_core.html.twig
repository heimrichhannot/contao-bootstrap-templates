
<section class="{{ class }} ce_accordion ce_text block"{{ cssID }}{% if style|default %} style="{{ style }}"{% endif %}>
    <div class="{{ toggler }}"{% if headlineStyles|default %} style="{{ headlineStyles }}"{% endif %}>
        {{ headline }}
    </div>
    <div class="{{ accordion }}">
        <div>
            {% if not addBefore|default %}
                {{ text|raw }}
            {% endif %}

            {% if addImage|default %}
                {% include ('@HeimrichHannotContaoUtils/image.html.twig') with {
                    'margin': margin|default,
                    'href': href|default,
                    'linkTitle': linkTitle|default,
                    'attributes': attributes|default,
                    'picture': picture|default,
                    'caption': caption|default
                } only %}
            {% endif %}

            {% if addBefore|default %}
                {{ text|raw }}
            {% endif %}

        </div>
    </div>
</section>