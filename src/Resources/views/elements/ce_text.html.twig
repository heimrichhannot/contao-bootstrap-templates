{% extends '@ContaoTwigTemplates/block/block_searchable.html.twig' %}

{% block content %}
    {% if floating|default == 'below' %}
        <div class="text">{{ text|raw }}</div>
    {% endif %}

    {% if addImage|default and singleSRC|default %}
        <div class="image">
            {{ singleSRC|image(size, {
                href: imageUrl|default or fullsize|default ?
                imageUrl|default(singleSRC) : null,
                margin: margin|default,
                floating: floating|default,
                fullsize: fullsize,
                linkAttributes: attributes|default
            })|raw }}
        </div>
    {% endif %}

    {% if floating|default != 'below' %}
        <div class="text">{{ text|raw }}</div>
    {% endif %}
{% endblock %}
