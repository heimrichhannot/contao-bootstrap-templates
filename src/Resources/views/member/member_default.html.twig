<!-- indexer::stop -->
<div class="{{ class|default }} block"{{ cssID|default }}{{ style|default ? ' class="' ~ style ~ '"' }}>

    {% if headline|default %}
        {% block headline %}
        <{{ hl|default('h1') }}>{{ headline }}</{{ hl|default('h1') }}>
        {% endblock %}
    {% endif %}

    {% if message|default %}
        {% block message %}
        <p class="tl_confirm">{{ message }}</p>
        {% endblock %}
    {% endif %}

    {% block form %}
    <form{{ action|default ? ' action="' ~ action ~ '"' }} id="{{ formId|default }}" method="post" enctype="{{ enctype|default }}"{% if formAttributes|default %} {{ formAttributes|raw }}{% endif %}>
        <div class="formbody">
            <input type="hidden" name="FORM_SUBMIT" value="{{ formId|default }}">
            <input type="hidden" name="REQUEST_TOKEN" value="{{ '{{request_token}}' }}">
            <div class="fields">
                {{ fields|default|raw }}
            </div>
            {% block submit %}
            <div class="widget widget-submit">
                <button type="submit" class="submit">{{ slabel|default }}</button>
            </div>
            {% endblock %}
        </div>
    </form>
    {% endblock %}

</div>
<!-- indexer::continue -->