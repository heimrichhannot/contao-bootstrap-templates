{% teaserOnly|default %}
    {% block alias %}
        <article class="{{ class|default }} block"{{ cssID|default }}{% if style|default %} style="{{ style }}"{% endif %}>
            <div class="ce_text block">
                <h2>{{ headline|default }}</h2>
                <div class="teaser">
                    {{ teaser|default }}
                    <p class="more"><a href="{{ href|default }}" title="{{ readMore|default }}">{{ more|default }} <span
                                    class="invisible">{{ headline|default }}</span></a></p>
                </div>
            </div>
        </article>
    {% endblock %}
{% elseif noMarkup|default %}
    {% block content %}
        {{ elements|join('') }}
    {% endblock %}
{% else %}
    <div class="{{ class|default }} block"{{ cssID|default }}{% if style|default %} style="{{ style }}"{% endif %}>
        {% if printable|defautl %}
            {% block syndication %}
                <!-- indexer::stop -->
                <div class="syndication">
                    {% if printButton|default %}
                        <a href="{{ print|default }}" class="print" rel="nofollow" title="{{ printTitle|default }}" onclick="window.print();return false">{{ image.getHtml('assets/contao/images/print.svg')|default }}</a>
                    {% endif %}
                    {% if pdfButton|default %}
                        <a href="{{ href|default }}" class="pdf" rel="nofollow" title="{{ pdfTitle }}">{{ image.getHtml('assets/contao/images/pdf.svg')|default }}</a>
                    {% endif %}
                    {% if facebookButton|default %}
                        <a href="share/?p=facebook&amp;u={{ encUrl|default }}&amp;t={{ encTitle|default }}&amp;v=1" rel="nofollow" title="{{ facebookTitle }}"
                           onclick="window.open(this.href,'','width=640,height=380,modal=yes,left=100,top=50,location=no,menubar=no,resizable=yes,scrollbars=yes,status=no,toolbar=no');return false"
                           class="facebook">{{ image.getHtml('assets/contao/images/facebook.svg')|default }}</a>
                    {% endif %}
                    {% if twitterButton|default %}
                        <a href="share/?p=twitter&amp;u={{ encUrl|default }}&amp;t={{ encTitle|default }}" rel="nofollow" title="{{ twitterTitle }}"
                           onclick="window.open(this.href,'','width=640,height=380,modal=yes,left=100,top=50,location=no,menubar=no,resizable=yes,scrollbars=yes,status=no,toolbar=no');return false"
                           class="twitter">{{ image.getHtml('assets/contao/images/twitter.svg')|default }}</a>
                    {% endif %}
                </div>
                <!-- indexer::continue -->

            {% endblock %}
        {% endif %}

        {% block content %}
            {{ elements|join('') }}
        {% endblock %}

        {% if backlink|default %}
            {% block backlink %}
                <!-- indexer::stop -->
                <p class="back"><a href="{{ backlink }}" title="{{ back|default }}">{{ back|default }}</a></p>
                <!-- indexer::continue -->
            {% endblock %}
        {% endif %}
    </div>
{% endif %}