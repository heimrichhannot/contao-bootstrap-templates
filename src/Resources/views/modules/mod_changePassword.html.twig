<div class="{{ class|default }} block"{{ cssID|default }}{{ style|default ? ' style="' ~ style ~ '"' : '' }}>

{% include '@HeimrichHannotTwigTemplates/parts/headline.html.twig' %}
{% include '@HeimrichHannotTwigTemplates/parts/message.html.twig' with { 'mclass': 'tl_confirm', 'message': message|default } %}

<form{{ action|default ? ' action="' ~ action ~ '"' : '' }} id="{{ formId|default }}" method="post" enctype="{{ enctype|default }}">
    <div class="formbody">
        <input type="hidden" name="FORM_SUBMIT" value="{{ formId }}">
        <input type="hidden" name="REQUEST_TOKEN" value="{{ '{{ request_token }}' }}">
        <div class="fields">
            {{ fields|default }}
        </div>
        <div class="widget widget-submit">
            <button type="submit" class="submit">{{ slabel|default }}</button>
        </div>
    </div>
</form>

</div>
<!-- indexer::continue -->
