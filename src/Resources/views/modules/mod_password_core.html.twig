<div class="{{ class|default }} block"{{ cssID|default }}{% if style|default %} style="{{ style }}"{% endif %}>

    {% if headline|default %}
        <{{ hl|default('h1') }}>{{ headline }}</{{ hl|default('h1') }}>
    {% endif %}>
    <form{% if action|default %} action="{{ action }}"{% endif %} id="{{ formId|default }}" method="post">
        <div class="formbody">
            <input type="hidden" name="FORM_SUBMIT" value="{{ formId }}">
            <input type="hidden" name="REQUEST_TOKEN" value="{{ '{{request_token}}' }}">
            {% if message|default %}
                <p class="error">{{ message }}</p>
            {% endif %}

            <div class="fields">
                {{ fields|default }}
            </div>

            <div class="widget widget-submit">
                <button type="submit" class="submit">{{ slabel|default }}</button>
            </div>
        </div>
    </form>
</div>
<!-- indexer::continue -->