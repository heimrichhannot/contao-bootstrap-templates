<!-- indexer::stop -->
<div class="pagination block">

    <p>{{ total }}</p>

    <ul>
        {% if hasFirst|default %}
            <li class="first"><a href="{{ first.href|raw }}" class="first"
                                 title="{{ first.title }}">{{ first.link|raw }}</a></li>
        {% endif %}

        {% if hasPrevious|default %}
            <li class="previous"><a href="{{ hasPrevious.href|raw }}" class="previous"
                                    title="{{ hasPrevious.title }}">{{ hasPrevious.link|raw }}</a></li>
        {% endif %}

        {% for page in pages %}
            {% if page.href is null %}
                <li class="active"><span class="active">{{ page.page }}</span></li>
            {% else %}
                <li><a href="{{ page.href|raw }}" class="link" title="{{ page.title }}">{{ page.page }}</a></li>
            {% endif %}
        {% endfor %}

        {% if hasNext|default %}
            <li class="next"><a href="{{ next.href|raw }}" class="next"
                                title="{{ next.title }}">{{ next.link|raw }}</a></li>
        {% endif %}

        {% if hasLast|default %}
            <li class="last"><a href="{{ last.href|raw }}" class="last"
                                title="{{ last.title }}">{{ last.link|raw }}</a></li>
        {% endif %}
    </ul>

</div>
<!-- indexer::continue -->

